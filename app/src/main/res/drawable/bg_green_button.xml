        <shape android:shape="rectangle">
            <solid android:color="@color/green_pressed" />
            <corners android:radius="@dimen/size_15" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/green" />
            <corners android:radius="@dimen/size_15" />
        </shape>
    </item>
</selector>