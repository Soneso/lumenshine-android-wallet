<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_90"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size_10">

            <com.soneso.lumenshine.presentation.customViews.LsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_5"
                android:text="@string/setup_step_2"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <com.soneso.lumenshine.presentation.customViews.LsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mnemonic_memorizing_title"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size_15">

            <com.soneso.lumenshine.presentation.customViews.LsTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center"
                android:text="@string/mnemonic_warning"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <com.soneso.lumenshine.presentation.customViews.LsTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/mnemonic_instruction"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.soneso.lumenshine.presentation.customViews.LsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/size_10"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center"
                    android:text="@string/mnemonic_read_more"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />

                <com.soneso.lumenshine.presentation.customViews.LsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/size_10"
                    android:layout_marginStart="@dimen/size_5"
                    android:layout_marginTop="@dimen/size_10"
                    android:gravity="center"
                    android:text="@string/here"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/mnemonic_more_info_button" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_dark" />

        <com.soneso.lumenshine.presentation.customViews.LsTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_15"
            android:text="@string/your_mnemonic"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/mnemonic_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/mnemonic_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mnemonic_confirm"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_14"
            android:theme="@style/RedButton"
            android:layout_marginBottom="@dimen/size_25"
            android:layout_marginTop="@dimen/size_25"
            android:visibility="invisible" />

    </LinearLayout>

</ScrollView>