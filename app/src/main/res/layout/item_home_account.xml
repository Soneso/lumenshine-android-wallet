<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/HomeFeedCardView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginEnd="@dimen/size_5"
    android:layout_marginStart="@dimen/size_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/account_image"
            android:layout_width="@dimen/size_75"
            android:layout_height="@dimen/size_75"
            android:layout_centerHorizontal="true"
            android:src="@drawable/mock_account_card"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/account_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_image"
            android:gravity="center"
            android:text="@string/home_account_title"
            android:textColor="@color/grey_800"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/account_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_title"
            android:layout_marginEnd="@dimen/size_10"
            android:layout_marginStart="@dimen/size_10"
            android:gravity="center"
            android:text="GADON36KZF7SA2RQTTO3SG2YCLGKPHFGJFCFENK4Z6QVVDG3IHNDEZ7W"
            android:textColor="@color/grey_700"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/account_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_id"
            android:layout_margin="@dimen/size_10"
            android:gravity="center"
            android:text="Balance 10000"
            android:textColor="@color/grey_700"
            android:textSize="@dimen/text_size_18" />

    </RelativeLayout>
</android.support.v7.widget.CardView>