<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.auth.MailConfirmationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_90"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size_10">


            <com.soneso.lumenshine.presentation.customViews.LsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_confirm_title"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_dark" />

        <com.soneso.lumenshine.presentation.customViews.LsTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_15"
            android:layout_marginBottom="@dimen/size_45"
            android:layout_marginTop="@dimen/size_30"
            android:gravity="center_horizontal"
            android:text="@string/mail_confirmation_description"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_16" />

        <com.soneso.lumenshine.presentation.customViews.LsTextView
            android:id="@+id/mail_confirmation_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_14"
            android:visibility="invisible" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/already_confirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/already_confirmed" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true" />

        </FrameLayout>

        <Button
            android:id="@+id/resend_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_25"
            android:text="@string/resend_mail" />

    </LinearLayout>
</ScrollView>