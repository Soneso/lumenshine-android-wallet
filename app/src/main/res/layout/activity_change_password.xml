<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.settings.ChangePasswordActivity">

    <LinearLayout
        android:id="@+id/change_password_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/view_change_password" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_password_success_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <include layout="@layout/view_change_password_success" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>