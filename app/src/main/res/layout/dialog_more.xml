<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingBottom="@dimen/size_5"
        android:paddingEnd="@dimen/size_10"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_5">

        <com.soneso.stellargate.presentation.customViews.SgTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/size_5"
        android:paddingEnd="@dimen/size_10"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_5"
        android:id="@+id/more_lost_password">

        <com.soneso.stellargate.presentation.customViews.SgTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lost_password"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/size_5"
        android:paddingEnd="@dimen/size_10"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_5"
        android:id="@+id/more_lost_2fa_secret">

        <com.soneso.stellargate.presentation.customViews.SgTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lost_tfa_secret"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/size_5"
        android:paddingEnd="@dimen/size_10"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_5"
        android:id="@+id/more_import_mnemonic">

        <com.soneso.stellargate.presentation.customViews.SgTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/import_mnemonic"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/size_5"
        android:paddingEnd="@dimen/size_10"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_5"
        android:id="@+id/more_about">

        <com.soneso.stellargate.presentation.customViews.SgTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/size_5"
        android:paddingEnd="@dimen/size_10"
        android:paddingStart="@dimen/size_10"
        android:paddingTop="@dimen/size_5"
        android:id="@+id/more_help">

        <com.soneso.stellargate.presentation.customViews.SgTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_16" />

    </LinearLayout>

</LinearLayout>