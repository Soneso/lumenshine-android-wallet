<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.LsCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_11"
    tools:context="com.soneso.lumenshine.presentation.auth.login.FingerprintFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size_14">

        <com.soneso.lumenshine.presentation.widgets.LsTextView
            style="@style/LsCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_with_fingerprint" />

        <com.soneso.lumenshine.presentation.widgets.LsImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_10"
            android:src="@drawable/icon_fingerprint" />

        <com.soneso.lumenshine.presentation.widgets.LsButton
            android:id="@+id/cancelButton"
            style="@style/WhiteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_10"
            android:text="@string/cancel" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
