<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_50">

        <androidx.cardview.widget.CardView
            style="@style/AppTheme.LsCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:context=".presentation.auth.TfaConfirmationFragment">

                <com.soneso.lumenshine.presentation.widgets.LsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_5"
                    android:text="@string/setup_step_1"
                    android:textSize="@dimen/text_size_16" />

                <com.soneso.lumenshine.presentation.widgets.LsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tfa_authentication_title"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/text_dark" />

                <com.soneso.lumenshine.presentation.widgets.LsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_10"
                    android:text="@string/your_2fa_secret"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

                <com.soneso.lumenshine.presentation.widgets.LsTextView
                    android:id="@+id/token_view"
                    android:layout_width="@dimen/size_100"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/copy_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_content_copy"
                    android:tint="@color/colorPrimary"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/text_dark" />

                <com.soneso.lumenshine.presentation.widgets.FormInputView
                    android:id="@+id/tfa_code_view"
                    android:layout_width="@dimen/size_125"
                    android:layout_height="wrap_content"
                    android:hint="@string/tfa_code"
                    android:inputType="number" />

                <Button
                    android:id="@+id/send_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/text_dark" />

                <com.soneso.lumenshine.presentation.widgets.LsTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginBottom="@dimen/size_10"
                    android:text="@string/tfa_reason"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_14" />

                <com.soneso.lumenshine.presentation.widgets.LsTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/tfa_setup_steps"
                    android:textColor="@color/text_dark"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>