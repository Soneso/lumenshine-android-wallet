<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth_graph"
    app:startDestination="@id/login_screen">

    <action
        android:id="@+id/to_login"
        app:destination="@id/login_screen" />

    <fragment
        android:id="@+id/login_screen"
        android:name="com.soneso.lumenshine.presentation.auth.login.LoginFragment" />


    <action
        android:id="@+id/to_register"
        app:destination="@id/register_screen" />

    <fragment
        android:id="@+id/register_screen"
        android:name="com.soneso.lumenshine.presentation.auth.registration.RegistrationFragment" />


    <action
        android:id="@+id/to_lost_credential"
        app:destination="@id/lost_credential_screen" />

    <fragment
        android:id="@+id/lost_credential_screen"
        android:name="com.soneso.lumenshine.presentation.auth.more.LostCredentialFragment" />

    <fragment
        android:id="@+id/to_email_lost_credential_screen"
        android:name="com.soneso.lumenshine.presentation.auth.more.EmailLostCredentialFragment" />

    <action
        android:id="@+id/to_pass_screen"
        app:destination="@id/pass_screen" />

    <fragment
        android:id="@+id/pass_screen"
        android:name="com.soneso.lumenshine.presentation.auth.login.PasswordFragment" />

    <!--<action-->
    <!--android:id="@+id/to_pass_screen"-->
    <!--app:destination="@id/pass_screen" />-->

    <!--<fragment-->
    <!--android:id="@+id/pass_screen"-->
    <!--android:name="com.soneso.lumenshine.presentation.auth.login.PasswordFragment" />-->


    <action
        android:id="@+id/to_fingerprint_setup_screen"
        app:destination="@id/fingerprint_setup_screen" />

    <fragment
        android:id="@+id/fingerprint_setup_screen"
        android:name="com.soneso.lumenshine.presentation.auth.setup.FingerprintSetupFragment" />


    <action
        android:id="@+id/to_confirm_tfa_screen"
        app:destination="@id/confirm_tfa_screen" />

    <fragment
        android:id="@+id/confirm_tfa_screen"
        android:name="com.soneso.lumenshine.presentation.auth.setup.TfaConfirmationFragment" />


    <action
        android:id="@+id/to_confirm_mail_screen"
        app:destination="@id/confirm_mail_screen" />

    <fragment
        android:id="@+id/confirm_mail_screen"
        android:name="com.soneso.lumenshine.presentation.auth.setup.MailConfirmationFragment" />


    <action
        android:id="@+id/to_mnemonic_screen"
        app:destination="@id/mnemonic_screen" />

    <fragment
        android:id="@+id/mnemonic_screen"
        android:name="com.soneso.lumenshine.presentation.auth.setup.NoteMnemonicFragment" />


    <action
        android:id="@+id/to_confirm_mnemonic_screen"
        app:destination="@id/confirm_mnemonic_screen" />

    <fragment
        android:id="@+id/confirm_mnemonic_screen"
        android:name="com.soneso.lumenshine.presentation.auth.setup.ConfirmMnemonicFragment" />

</navigation>